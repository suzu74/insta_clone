<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/image_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Image Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center">
  <h1>Welcome to the Insta Clone App</h1>

  <h2>
    This app for people who want to share your favorite pics! 
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>